
<form method="post" action="/cashboard" class="form-style">
  <label class="aligner-item" for="amount">Amount Spent</label>
  <input
  type="text"
  name="amount"
  id="name-field"
  />

<!--      drop down for merchant                  -->

  <label  class="aligner-item" for="merchant-field">Merchant</label>
  <select
  name="merchant_id"
  id="merchant-field"
  >

  <% @merchants.each do |merchant| %>
  <option value="<%= merchant.id%>"><%= merchant.name %></option>

<% end %>
 </select>



 <label class="aligner-item" for="tag-field">Tag</label>
 <select
 name="tag_id"
 id="tag-field"
 >

 <% @tags.each do |tag| %>
 <option value="<%= tag.id%>"><%= tag.name %></option>

<% end %>

<input id="submit" class="aligner-item" type="submit" value="add transaction"/>










</form>
