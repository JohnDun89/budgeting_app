<body class=”add-tx”>
<form method="post" action="/cashboard" class="grid-stye">
  <div class="field"
  <label  for="name-field">Amount Spent :</label>
  <input
  type="text"
  name="amount"
  id="name-field"
  />
</div>

<!--      drop down for merchant                  -->
<div class="field">
  <label  for="merchant-field">Merchant</label>
  <select
  name="merchant_id"
  id="merchant-field"
  >

  <% @merchants.each do |merchant| %>
  <option value="<%= merchant.id%>"><%= merchant.name %></option>

  <% end %>
</select>
</div>


<div class="field">
 <label for="tag-field">Tag</label>
 <select
 name="tag_id"
 id="tag-field"
 >

 <% @tags.each do |tag| %>
 <option  value="<%= tag.id%>"><%= tag.name %></option>

<% end %>
</div>

<input id="submit" class="field grid-row" type="submit" value="add transaction"/>










</form>
