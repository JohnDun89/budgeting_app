<p>Filter by Merchant </p>

<% @transactions.each do |transaction| %>
<p><%= transaction.amount %> <%= transaction.spend_date %> <%=transaction.find_by_merchant.name %> <%= transaction.find_by_tag.name %></p>
<% end %>

<form method="post" action="/cashboard/merchant">



  <label for merchant="merchant-field">Merchant</label>
  <select
  name="merchant"
  id="merchant-field"
  >

  <% @merchants.each do |merchant| %>
  <option value="<%= merchant.id%>"><%= merchant.name %></option>

<% end %>
 </select>

<input type="submit" value="submit"/>


 </form>
